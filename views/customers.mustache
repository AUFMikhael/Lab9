<!doctype html>
<html lang="en">
<head>
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1>{{ title }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{# items }}
            <tr>
                <td>{{ id }}</td>
                <td>{{ first_name }}</td>
                <td>{{ last_name }}</td>
                <td>{{ email }}</td>
                <td>
                    <a href="/customers/{{ id }}" class="btn btn-primary">View</a>
                </td>
            </tr>
            {{/ items }}
        </tbody>
    </table>
</body>
</html>
